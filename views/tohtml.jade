extends layout

mixin codeBlock(title, dependsOn)
  if dependsOn
    div.inset.codeBlock
      span.title= title
      div.inset
        code
          block
 
mixin repeatLink()
  if repeatUrl
    a(href='#{ repeatUrl }') #{ decodeURIComponent(repeatUrl) }
  if ! repeatUrl
    a(href='/') No link available. :(

block content
  h1= title

  p
    span This page was generated by the Concatenative URL Language.
    span You can run it again with this link
      +repeatLink()

  +codeBlock('Error:', error)
    div= error.message

